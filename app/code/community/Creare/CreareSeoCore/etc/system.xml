                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><type>1</type></depends>
                            <comment><![CDATA[Use this area to add extra features to the Universal Analytics tracking code. This will appear on every frontend page where the existing code is currently being pulled out. <a target="_blank" href="https://developers.google.com/analytics/devguides/collection/analyticsjs/">More information about Universal Analytics</a>]]></comment>
                        </additional_tracking_code>
                    </fields>
                </googleanalytics>
            </groups>
        </creareseocore>

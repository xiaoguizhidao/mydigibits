<?php 
$subscription = $this->getSubscription();
$_product = $subscription->getProduct();
$preconfiguredValues = $_product->getPreconfiguredValues();
?>

<?php if ($_product->getAwSarpEnabled()): ?>

<p class="sarp-subscription">
    <?php echo $this->__('Subscription type') ?>:

    <?php if (($types = $subscription->getSubscriptionTypes()) && (sizeof($types) > 1)): ?>

    <select name="aw_sarp_subscription_type" style="width:200px;">
        <?php foreach ($types as $item): ?>
        <option <?php if ($preconfiguredValues && $preconfiguredValues->getData('aw_sarp_subscription_type') == $item['value']): ?>selected="selected"<?php endif; ?>
                value="<?php echo $item['value']?>"><?php echo $item['label']?></option>
        <?php endforeach; ?>
    </select>
    <?php elseif ($types && (count($types) == 1)): ?>
    <span><input type="hidden" name="aw_sarp_subscription_type"
                 value="<?php echo $types[0]['value']?>"/><?php echo $types[0]['label']?></span>
    <?php endif;?>
</p>

<?php endif; ?>